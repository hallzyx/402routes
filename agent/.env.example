# AI Budget Guardian Configuration

# Server
HOST=0.0.0.0
PORT=8000

# Backend API
BACKEND_URL=http://localhost:8787

# Database
DATABASE_URL=sqlite+aiosqlite:///./guardian.db

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Deepseek Configuration
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# AI Provider (openai or deepseek)
AI_PROVIDER=openai

# Cronos/Web3
CRONOS_RPC_URL=https://evm-t3.cronos.org
PRIVATE_KEY=your-private-key-here
GUARDIAN_WALLET_ADDRESS=your-guardian-wallet-address

# Budget Settings
DEFAULT_BUDGET_LIMIT=100.0
WARNING_THRESHOLD=0.8
CRITICAL_THRESHOLD=0.95
PAUSE_THRESHOLD=1.0

# Analysis Settings
UNUSUAL_PATTERN_MULTIPLIER=3.0
ANALYSIS_WINDOW_MINUTES=5

# Notifications
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=true
